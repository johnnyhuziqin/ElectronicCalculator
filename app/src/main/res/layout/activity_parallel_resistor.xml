</LinearLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation = "horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parallelR5"
        tools:context=".Resistor_divider" />
    <EditText android:id="@+id/parallelR5_value"
